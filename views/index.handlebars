<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h3>Ready To Eat:</h3>
        <br><br>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h3>Devoured:</h3>
        <br><br>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Order Any Burger Here!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
    <div id= "input">
      <input type="text" id="name" name="burger_name" placeholder=>
    </div>
      <button type="submit" class="addBurgerButton">Add The Burger</button>
      </form>

  </div>
</div>
